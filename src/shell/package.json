{
  "name": "podman-desktop-companion",
  "version": "4.0.0-b.1",
  "author": "Ionut Stoica <stoica.ionut@gmail.com>",
  "description": "Podman CLI desktop companion tool",
  "keywords": [],
  "homepage": ".",
  "main": "./public/main.js",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "electron": "^18.0.3",
    "electron-builder": "^23.0.3",
    "electron-packager": "^15.4.0",
    "prettier": "^2.6.2",
    "prettier-eslint": "^13.0.0"
  },
  "dependencies": {
    "@podman-desktop-companion/container-client": "file:../../packages/container-client",
    "@podman-desktop-companion/executor": "file:../../packages/executor",
    "@podman-desktop-companion/rpc": "file:../../packages/rpc",
    "@podman-desktop-companion/terminal": "file:../../packages/terminal",
    "ajv": "8.11.0",
    "axios": "^0.26.1",
    "electron-cfg": "^1.2.7",
    "electron-context-menu": "^3.1.2",
    "electron-log": "^4.4.6",
    "fix-path": "^3.0.0",
    "private-ip": "^2.3.3",
    "uuid": "8.3.2"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.10"
  },
  "engines": {
    "node": "~16"
  },
  "scripts": {
    "start": "electron .",
    "electron": "electron",
    "electron-builder": "electron-builder",
    "electron:package:mac": "electron-builder --publish never -m -c.extraMetadata.main=build/main.js",
    "electron:package:win": "electron-builder --publish never -w -c.extraMetadata.main=build/main.js",
    "electron:package:linux_x86": "electron-builder --publish never -l -c.extraMetadata.main=build/main.js",
    "electron:package:linux_arm": "electron-builder --publish never -l --arm64 -c.extraMetadata.main=build/main.js"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "error",
      "jsx-a11y/no-autofocus": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "jsx-a11y/no-noninteractive-tabindex": "off",
      "jsx-a11y/no-noninteractive-element-interactions": "off"
    }
  },
  "build": {
    "appId": "iongion.podman-desktop-companion",
    "artifactName": "podman-desktop-companion-${arch}-${version}.${ext}",
    "productName": "Podman Desktop Companion",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icons/appIcon.icns",
      "target": "dmg",
      "type": "development",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSCameraUsageDescription": "~",
        "NSMicrophoneUsageDescription": "~"
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/icon.png"
    },
    "linux": {
      "icon": "icons/appIcon.svg",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    }
  },
  "repository": "https://github.com/iongion/podman-desktop-companion.git"
}
