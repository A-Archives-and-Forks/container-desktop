{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": false,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"],

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": false,

    /* Paths */
    "baseUrl": "src",
    "paths": {
      "@/container-client": ["container-client"],
      "@/container-client/*": ["container-client/*"],
      "@/electron-shell": ["electron-shell"],
      "@/electron-shell/*": ["electron-shell/*"],
      "@/env": ["env"],
      "@/env/*": ["env/*"],
      "@/logger": ["logger"],
      "@/logger/*": ["logger/*"],
      "@/platform": ["platform"],
      "@/platform/*": ["platform/*"],
      "@/resources": ["resources"],
      "@/resources/*": ["resources/*"],
      "@/rpc": ["rpc"],
      "@/rpc/*": ["rpc/*"],
      "@/utils": ["utils"],
      "@/utils/*": ["utils/*"],
      "@/web-app": ["web-app"],
      "@/web-app/*": ["web-app/*"]
    }
  },
  "include": ["src"]
}
